# Backend Environment Variables
# Copy this to .env and fill in your values

# ==============================================
# Database (Local: Docker Compose PostgreSQL)
# ==============================================
DATABASE_URL=postgresql://familyhelper_admin:dev_password_local@localhost:5432/familyhelper

# ==============================================
# Server Configuration
# ==============================================
PORT=3000
NODE_ENV=development

# ==============================================
# Authentication (Kinde)
# ==============================================
KINDE_DOMAIN=https://your-app.kinde.com
KINDE_CLIENT_ID=your-client-id
KINDE_CLIENT_SECRET=your-client-secret

# JWT Configuration
JWT_SECRET=your-jwt-secret-here

# Message Encryption (64 character hex string)
MESSAGE_ENCRYPTION_KEY=your-64-character-hex-encryption-key-here-0123456789abcdef

# ==============================================
# Worker Service (Local: Docker container)
# Handles: video/audio conversion, image conversion, PDF generation, call recording
# ==============================================
# Local development: HTTP server in Docker
WORKER_SERVICE_URL=http://localhost:3001

# Production: Lambda function name (used when NODE_ENV=production)
WORKER_SERVICE_LAMBDA=family-helper-worker-service-prod

# ==============================================
# Email (Local: MailHog)
# ==============================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@familyhelperapp.com

# ==============================================
# File Storage (Local: filesystem)
# ==============================================
# Local development uses filesystem
UPLOADS_DIR=./uploads

# Production: S3 bucket (used when NODE_ENV=production)
S3_BUCKET=family-helper-files-prod
AWS_S3_REGION=ap-southeast-2

# ==============================================
# Stripe (Use test keys for development!)
# ==============================================
STRIPE_SECRET_KEY=sk_test_your_test_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# ==============================================
# Internal API Keys
# ==============================================
# Generate with: openssl rand -hex 32
BILLING_API_KEY=your-billing-api-key-here

# ==============================================
# CORS (comma-separated list)
# ==============================================
CORS_ORIGINS=http://localhost:8081,http://localhost:3000,http://localhost:19006
